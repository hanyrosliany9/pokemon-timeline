# ===== PRODUCTION DATABASE =====
POSTGRES_DB=pokemon_timeline_prod
POSTGRES_USER=pokemon_user_prod
POSTGRES_PASSWORD=your_very_strong_postgres_password_here_min_20_chars

# ===== REDIS =====
REDIS_PASSWORD=your_very_strong_redis_password_here_min_20_chars

# ===== BACKEND =====
NODE_ENV=production
DATABASE_URL=postgresql://pokemon_user_prod:your_very_strong_postgres_password_here_min_20_chars@postgres:5432/pokemon_timeline_prod
REDIS_URL=redis://:your_very_strong_redis_password_here_min_20_chars@redis:6379
PORT=3001
CORS_ORIGIN=https://your-domain.com

# ===== CURRENCY API KEYS =====
# Get API keys from https://www.coingecko.com/en/api
COINGECKO_API_KEY=your_production_coingecko_api_key

# Get API keys from https://www.binance.com/en/binance-api
BINANCE_API_KEY=your_production_binance_api_key
BINANCE_API_SECRET=your_production_binance_api_secret

# ===== FRONTEND URLs (for production) =====
FRONTEND_URL=https://your-domain.com
VITE_API_URL=https://your-domain.com/api
VITE_WS_URL=wss://your-domain.com

# ===== CLOUDFLARE TUNNEL =====
# Create a tunnel at https://dash.cloudflare.com and get the token
CLOUDFLARE_TUNNEL_TOKEN=your_cloudflare_tunnel_token_here

# Optional: Set tunnel config path
# CLOUDFLARE_CONFIG_PATH=/etc/cloudflared/config.yml
